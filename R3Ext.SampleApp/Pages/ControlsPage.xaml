<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="R3Ext.SampleApp.ControlsPage"
             Title="Controls">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Controls Demo" Style="{StaticResource SubHeadline}" />

            <!-- Slider + Label -->
            <Label Text="Slider" />
            <Slider x:Name="DemoSlider" Minimum="0" Maximum="100" />
            <Label x:Name="SliderValueLabel" />

            <!-- Stepper + Label -->
            <Label Text="Stepper" />
            <Stepper x:Name="DemoStepper" Minimum="0" Maximum="10" Increment="1" />
            <Label x:Name="StepperValueLabel" />

            <!-- Switch + Label -->
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                <Label Text="Toggle" />
                <Switch x:Name="DemoSwitch" Grid.Column="1" />
            </Grid>
            <Label x:Name="SwitchStateLabel" />

            <!-- DatePicker + TimePicker + Labels -->
            <Label Text="Date &amp; Time" />
            <DatePicker x:Name="DemoDate" />
            <TimePicker x:Name="DemoTime" />
            <Label x:Name="DateLabel" />
            <Label x:Name="TimeLabel" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
