<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:R3Ext.SampleApp"
    x:Class="R3Ext.SampleApp.DynamicDataBasicsPage"
    Title="DynamicData Basics">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="SourceList of int bound to a ListView" Style="{StaticResource SubHeadline}" />

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                <Entry x:Name="NewItemEntry" Placeholder="Enter number" Keyboard="Numeric" />
                <Button Text="Add" Grid.Column="1" Clicked="OnAddItem" />
            </Grid>

            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                <Button Text="Add Random" Clicked="OnAddRandom" />
                <Button Text="Remove Selected" Grid.Column="1" Clicked="OnRemoveSelected" />
                <Button Text="Clear" Grid.Column="2" Clicked="OnClear" />
            </Grid>

            <CollectionView x:Name="ItemsView" HeightRequest="300" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="8" Margin="0,4" HasShadow="False" BorderColor="LightGray">
                            <Label Text="{Binding .}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
