<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="R3Ext.SampleApp.DDAggregationPage"
             Title="Aggregation">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="16">
            <Label Text="DynamicData Aggregation Operators"
                   Style="{StaticResource Headline}" />
            <Label Text="Demonstrates Count, Sum, Min, Max, Avg, and StdDev operators with real-time updates."
                   TextColor="Gray" />
            <!-- Input Controls -->
            <Frame BorderColor="LightBlue"
                   Padding="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Add Values"
                           FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <Entry x:Name="ValueEntry"
                               Placeholder="Enter number"
                               Keyboard="Numeric" />
                        <Button Text="Add"
                                Grid.Column="1"
                                Clicked="OnAddValue" />
                    </Grid>
                    <Grid ColumnDefinitions="*,*,*"
                          ColumnSpacing="8">
                        <Button Text="Add 5 Random"
                                Clicked="OnAddRandom" />
                        <Button Text="Remove First"
                                Grid.Column="1"
                                Clicked="OnRemoveFirst" />
                        <Button Text="Clear"
                                Grid.Column="2"
                                BackgroundColor="DarkRed"
                                Clicked="OnClear" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            <!-- Aggregation Results -->
            <Frame BorderColor="Green"
                   Padding="12">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                      ColumnDefinitions="120,*"
                      RowSpacing="8">
                    <Label Text="Count:"
                           FontAttributes="Bold" />
                    <Label x:Name="CountLabel"
                           Grid.Column="1"
                           Text="0" />
                    <Label Text="Sum:"
                           FontAttributes="Bold"
                           Grid.Row="1" />
                    <Label x:Name="SumLabel"
                           Grid.Row="1"
                           Grid.Column="1"
                           Text="0" />
                    <Label Text="Min:"
                           FontAttributes="Bold"
                           Grid.Row="2" />
                    <Label x:Name="MinLabel"
                           Grid.Row="2"
                           Grid.Column="1"
                           Text="—" />
                    <Label Text="Max:"
                           FontAttributes="Bold"
                           Grid.Row="3" />
                    <Label x:Name="MaxLabel"
                           Grid.Row="3"
                           Grid.Column="1"
                           Text="—" />
                    <Label Text="Average:"
                           FontAttributes="Bold"
                           Grid.Row="4" />
                    <Label x:Name="AvgLabel"
                           Grid.Row="4"
                           Grid.Column="1"
                           Text="—" />
                    <Label Text="Std Dev:"
                           FontAttributes="Bold"
                           Grid.Row="5" />
                    <Label x:Name="StdDevLabel"
                           Grid.Row="5"
                           Grid.Column="1"
                           Text="—" />
                </Grid>
            </Frame>
            <!-- Current Values List -->
            <Label Text="Current Values:"
                   FontAttributes="Bold" />
            <Frame>
                <CollectionView x:Name="ValuesView"
                                ItemsSource="{Binding}"
                                MaximumHeightRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8"
                                  ColumnDefinitions="*,Auto">
                                <Label Text="{Binding}"
                                       VerticalOptions="Center" />
                                <Button Text="✕"
                                        Grid.Column="1"
                                        FontSize="12"
                                        Padding="8,4"
                                        CommandParameter="{Binding}"
                                        Clicked="OnRemoveValue" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
