<?xml version="1.0" encoding="UTF-8"?>
<Shell x:Class="R3Ext.SampleApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:R3Ext.SampleApp"
       Title="R3Ext.SampleApp">
    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" />
    <!-- Demo pages -->
    <ShellContent Title="Basics"
                  ContentTemplate="{DataTemplate local:BasicsPage}"
                  Route="BasicsPage" />
    <ShellContent Title="DD Basics"
                  ContentTemplate="{DataTemplate local:DynamicDataBasicsPage}"
                  Route="DynamicDataBasicsPage" />
    <ShellContent Title="DD Filter &amp; Sort"
                  ContentTemplate="{DataTemplate local:DynamicDataFilterSortPage}"
                  Route="DynamicDataFilterSortPage" />
    <ShellContent Title="Deep Binding"
                  ContentTemplate="{DataTemplate local:DeepBindingPage}"
                  Route="DeepBindingPage" />
    <ShellContent Title="Converter Playground"
                  ContentTemplate="{DataTemplate local:ConverterPlaygroundPage}"
                  Route="ConverterPlaygroundPage" />
    <ShellContent Title="Conversion Form"
                  ContentTemplate="{DataTemplate local:ConversionFormPage}"
                  Route="ConversionFormPage" />
    <ShellContent Title="Controls"
                  ContentTemplate="{DataTemplate local:ControlsPage}"
                  Route="ControlsPage" />
    <ShellContent Title="Performance"
                  ContentTemplate="{DataTemplate local:PerformancePage}"
                  Route="PerformancePage" />
    <ShellContent Title="Form Demo"
                  ContentTemplate="{DataTemplate local:FormPage}"
                  Route="FormPage" />
</Shell>